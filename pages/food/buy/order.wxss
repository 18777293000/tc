/* pages/food/order/order.wxss */

.body_box {
  padding: 20rpx;
  box-sizing: border-box;
  background: #f2f2f2;
}

.address {
  border-radius: 20rpx;
  background: #85c5e9;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
}

.address_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #fff;
  align-items: center;
  color: white;
}
.top_left{
  width: 60%;
}
.top_left{
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address_bottom {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  color: white
}
.order{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background: white;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}
.list{
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2
}
.list_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;

}
.list_img image{
  width: 100%;
  height: 100%;
}
.list_word{
  display: flex;
  flex-direction: column;
  margin-left: 45rpx;
  width: 100%;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: white;
  align-items: center;
  
}
/*操作菜品数量*/

.dish-item-count {
  display: flex;
  font-size: 26rpx;
  text-align: center;
  margin: auto;
  flex-direction: row-reverse
}

.add_num {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  background: #e7d0ae;
  margin: 0px 10rpx;
  border-radius: 50%;
  font: 30rpx;
  line-height: 40rpx;
}

.dish-item-count-minus {
  width: 60rpx;
  height: 60rpx;
}

.dish-item-count-text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  padding-bottom: 10rpx;
  display: flex
  /* color:red */
}

.dish-item-count-plus {
  width: 60rpx;
  height: 60rpx;
}