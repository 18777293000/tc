<!--pages/user/address/add/index.wxml-->
<view class='pages'>
  <form bindsubmit='formSubmit'>
    <view class='message_box'>
      <view class='list_line'>
        <view style="flex:2">收货人：</view>
        <input style='flex:6' name="names" type='text'></input>
      </view>
      <view class='list_line'>
        <view style="flex:2">手机号码：</view>
        <input style='flex:6' name="telephone" type='number'></input>
      </view>
      <view class='list_line'>
        <view style="flex:2">所在地区：</view>
        <input style='flex:6' name="address" type='text'></input>
      </view>
      <view style='padding:20rpx 0;color:#666;box-sizing:border-box;width:100%;border-bottom: 1px solid #d2d2d2;'>
        <text style="padding-left:20rpx;">详细地址:</text>
        <textarea style='height:200rpx;width:100%;padding:20rpx;color:#666;box-sizing:border-box;border:1px solid #d2d2d2;margin-top:20rpx' placeholder='如门牌号、道路、小区、楼牌号、单元室等' name="particular" ></textarea>
      </view>
      <view class='list_line' style='justify-content: space-between;'>
        <view>设置为默认地址</view>
        <switch checked="checked"  bindchange="switchChange"></switch>
      </view>
    </view>

    <button class='save'  form-type='submit'>保存</button>
  </form>
</view>