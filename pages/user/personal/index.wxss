/* pages/user/personal/index.wxss */
#page{
  padding: 20rpx;
  background: #f2f2f2;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
}
.personal_box{
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: white;
  border-radius: 20rpx;
}
.personal_img{
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: auto;
  background: red;
  overflow: hidden
}
.personal_img image{
  width: 100%;
  height: 100%;
}
.add{
  padding: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #e7d0ae;
  width: 100%
}
.list{
  margin-top: 20rpx;

}
.list_line{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2
}
.list_line input{
  text-align: right;
  color: #333;
  padding-right:10rpx;
}
.list_line:last-child{
  border-bottom: none
}

.save{
  width: 100%;
  box-sizing: border-box;
  background: #e7d0ae;
  color: rgb(14, 11, 11);
  text-align: center;
  border-radius: 20rpx;
  margin-top: 50rpx;
  letter-spacing: 10rpx;
  font-size: 32rpx;
}

button::after{
  border: none
}
