/* pages/user/order/order.wxss */
.container {
  width: 100%;
  height: auto;
  background: #fff;
  box-sizing: border-box;
  padding-top:20rpx;
}
.search{
 width:75%;
margin:0rpx auto;
background:#f2f2f2;
padding:10rpx;
border-radius:50rpx;
margin-bottom:20rpx;
padding-left:80rpx;
}
/*选项卡*/
.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #d0d0d0;
  text-align: center;
  line-height: 80rpx;
  border-top:8rpx solid #f2f2f2;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 18%;
  color: #333;
}

.on {
  color: #da7c0c;
  border-bottom: 5rpx solid #da7c0c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}
