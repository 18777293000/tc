/* pages/foods/food.wxss */

page {
  width: 100vw;
  height: 100vh;
}

.container {
  padding: 0px;
  clear: both;
}

/**轮播图**/

swiper {
  /* height: 421.5rpx; */
  width: 100%;
  height: 300rpx;
}

swiper-item image {
  width: 100%;
  height: 100%;
}

.swiper-container {
  width: 100%;
  position: relative;
}

.swiper-container .swiper {
  height: 300rpx;
}

swiper-item navigator {
  height: 100%;
  width: 100%;
  display: block;
}

.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}

/*搜索*/

.search {
  width: 90%;
  margin: 30rpx auto;
  background-color: #f2f2f2;
  border-radius: 50rpx;
  padding: 5px;
  border: 1px solid #ccc;
}

.search icon {
  vertical-align: bottom;
  margin: 0 20rpx;
}

form input {
  display: inline-block;
  font-size: 16px;
  width: 85%;
}

/*选项卡*/

.swiper-tab {
  width: 100%;
  border-bottom: 2rpx solid #d0d0d0;
  text-align: center;
  line-height: 80rpx;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 30%;
  color: #000;
}

.on {
  color: #caad80;
  /* border-bottom: 5rpx solid #da7c0c; */
}

.on .bot {
  display: block;
  width: 65%;
  height: 10rpx;
  border-radius: 30rpx;
  background: caad80;
  border: 1px solid #caad80;
  background: #caad80;
  margin: 0 auto;
}

.bot {
  display: block;
  width: 65%;
  height: 10rpx;
  border-radius: 30rpx;
  border: 1px solid #f2f2f2;
  background: #f2f2f2;
  margin: 0 auto;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.cont {
  width: 100%;
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}

.cont image {
  width: 150px;
  height: 80px;
  float: left;
}

.cont .addr {
  width: 100px;
  float: right;
}

/*******综合排序********/

.global {
  padding: 30rpx;
  width: 100%;
}

.global .left {
  width: 80px;
  height: 80px;
  border-radius: 10px;
  margin-right: 30rpx;
}

.swiper-box .global {
  text-align: left;
}

.middle {
  display: inline-block;
  width: 40%;
  vertical-align: top;
  text-align: left;
}

.middle view {
  display: inline-block;
  width: 100%;
  text-align: left;
  margin: 5px;
  margin-left: 0px;
}

.middle text {
  display: inline-block;
  width: 100%;
  text-align: left;
}

.middle view image {
  width: 15px;
  height: 15px;
  margin-right: 5px;
  margin-left: 0px;
}

.month {
  color: #4c4c4c;
  font-size: 12px;
}

.right {
  display: inline-block;
  width: 30%;
  color: #737373;
}

.right text {
  display: inline-block;
}
.attuide{
  margin-bottom:25rpx;
}

.attuide text {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  text-align: center;
  margin-right: 10rpx;
  color: #fff;
  font-size: 10px;
  border-radius: 10rpx;
  line-height: 38rpx;
}

.out {
  background-color: #ffad51;
}

.take {
  background-color: #ff7e7d;
}

.order {
  background-color: #85c5e9;
}

.distance {
  margin-top: 5px;
  font-size: 12px;
  
}

/**销量最高**/

.conts {
  display: flex;
  justify-content: space-between;
  padding: 30rpx;
  border-bottom: 1rpx solid #ccc;
}

.conts image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 10px;
  margin-right: 20rpx;
  flex: 3;
}

.stars {
  display: block;
  margin-top: 15rpx;
  margin-bottom: 10rpx;
}

.stars image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 5rpx;
}

.names {
  margin-right: 160rpx;
  flex: 3;
  color: #000;
}

.rights {
  flex: 3;
}

