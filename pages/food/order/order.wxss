/* pages/food/order/order.wxss */

.body_box {
  padding: 20rpx;
  box-sizing: border-box;
  background: #f2f2f2;
}

.address {
  border-radius: 20rpx;
  background: #85c5e9;
  display: flex;
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
}

.address_top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #fff;
  align-items: center;
  color: white;
}
.top_left{
  width: 60%;
}
.top_left{
  width: 80%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address_bottom {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  box-sizing: border-box;
  color: white
}
.order{
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  background: white;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}
.list{
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2
}
.list_img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;

}
.list_img image{
  width: 100%;
  height: 100%;
}
.list_word{
  display: flex;
  flex-direction: column;
  margin-left: 45rpx;
  width: 100%;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background: white;
  align-items: center;
  
}
/*操作菜品数量*/

.dish-item-count {
  display: flex;
  font-size: 26rpx;
  text-align: center;
  margin: auto;
  flex-direction: row-reverse
}

.add_num {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  background: #e7d0ae;
  margin: 0px 10rpx;
  border-radius: 50%;
  font: 30rpx;
  line-height: 40rpx;
}

.dish-item-count-minus {
  width: 60rpx;
  height: 60rpx;
}

.dish-item-count-text {
  color: #ccc;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  padding-bottom: 10rpx;
  display: flex
  /* color:red */
}

.dish-item-count-plus {
  width: 60rpx;
  height: 60rpx;
}
.tip-content-dialog {
  position: fixed;
  display: flex;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(128, 126, 126, 0.555);
  z-index: 99999;
}

.tip-content-dialog .tip-dialog-view {
  width: 80%;
  margin: auto;
  border-radius: 25rpx;
  vertical-align: middle;
  animation: tanchu 400ms ease-in;
  /* overflow: hidden; */
  padding: 20rpx;
}

.tip-content-dialog .btn {
  background: #f2f7fa;
}

@keyframes tanchu {
  from {
    transform: scale(0, 0);
    -webkit-transform: scale(0, 0);
  }

  to {
    transform: scale(1, 1);
    -webkit-transform: scale(1, 1);
  }
}

.tip-content-dialog .dialogClose {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.guan {
  position: absolute;
  bottom: 0;
  left: 44%;
}

.guan image {
  width: 100rpx;
  height: 100rpx;
}

.quan {
  position: relative;
  display: flex;
  width: 100%;
  background-image: url('https://pl.shipucm.cn/image/yh.png');
  background-size: contain;
  height: 165rpx;
  background-repeat: no-repeat;
  align-items: center;
}