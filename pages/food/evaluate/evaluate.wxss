/* pages/food/evaluate/evaluate.wxss */
.all {
  margin: 20rpx;
  font-size: 14px;
  width: 150rpx;
  display: inline-block;
  float: left;
  height: 20px;
}

.num {
  color: #caad81;
  width: 100rpx;
  display: inline-block;
  float: left;
  margin: 20rpx;
  margin-left: 0px;
  height: 20px;
}
.dish-item-last-money{
  color: #999;
  text-decoration: line-through;
  font-size: 24rpx;
  padding-left: 20rpx;

}
.star image {
  width: 15px;
  height: 15px;
  margin: 10px 5px;
}

.assess {
  width: 100%;
  overflow: hidden;
  padding: 5px;
}

.assess text {
  padding: 5px 10px;
  text-align: center;
  border: 1px solid #878787;
  border-radius: 15px;
  background-color: #fff;
  color: #878787;
  float: left;
  font-size: 12px;
  margin: 5px;
}

.sel {
  text-align: left;
}

radio {
  display: inline-block;
  margin: 3px;
  width: 5px;
  height: 5px;
  margin-left: 10px;
  margin-bottom: 10px;
}

.pic {
  color: #878787;
  margin-left: 20px;
}

