.cont view {
  text-align: left;
  padding: 10px;
  display: inline-block;
  width: 100%;
  padding-bottom: 0px;
}

.cont  .section {
  text-align: center;
  padding: 0px;
  display: inline-block;
  /*****/
  position: absolute;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.cont .picture {
  padding-bottom: 0px;
  margin-bottom: 0px;
}

.cont .picture image {
  width: 40px;
  height: 40px;
  border-radius: 50%;
}

.cont .person {
  width: 60%;
  height: 30px;
  padding-top: 0px;
}

.cont .picture .time {
  display: inline-block;
  vertical-align: top;
  color: #717171;
  font-size: 10px;
  margin-top: 0px;
}

.cont  .source {
  width: 100%;
  padding-left: 0px;
  font-size: 10px;
  color: #878787;
}

.cont  .source image {
  width: 10px;
  height: 10px;
  margin: 0px 3px;
  border-radius: 0px;
  display: inline-block;
}

.cont .say {
  text-align: lefft;
  width: 80%;
  padding: 5px;
  padding-left: 0px;
  margin-left: 40px;
  font-size: 12px;
  padding-top: 0px;
  color: #2c2c2c;
}

.word {
  line-height: 14px;
}

.cont .say image {
  width: 100px;
  height: 100px;
  margin-top: 5px;
}
