/* pages/user/attestation/index.wxss */
#page{
  width: 100%;
  height: 100%;
  background: #f2f2f2;
  padding: 20rpx;
  box-sizing: border-box
}
.attestation_box{
  width: 100%;
  padding: 20rpx;
  border-radius: 20rpx;
  background: white;
  box-sizing: border-box;
  border: 1px solid #d2d2d2
}
.list_line{
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #333;
  padding: 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #f2f2f2
}
.list_line input{
  text-align: center;
  color: #333;
  background: #f2f2f2;
  border-radius: 15rpx;
}

.save{
  width: 100%;
  box-sizing: border-box;
  background: #e7d0ae;
  color: #fff;
  text-align: center;
  border-radius: 20rpx;
  margin-top: 50rpx;
  letter-spacing: 10rpx;
  font-size: 32rpx;
}
button::after{
  border: none
}