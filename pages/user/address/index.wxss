/* pages/user/address/index.wxss */
.pages{
  padding: 30rpx;
  box-sizing: border-box;
  background: #f2f2f2
}
.add{
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background: #e25858;
  text-align: center;
  color: white;
  letter-spacing: 3rpx;
}

.list{
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  background: white;
  border: 1px solid #d2d2d2;
  display: flex;
  align-items: center;
  margin: 20rpx 0
}
.list_left{
  flex: 6;
  display: flex;
  flex-direction: column;
  border-right: 1px solid #d2d2d2;
  padding-right: 20rpx;
  box-sizing: border-box;
}

.left_top{
  display: flex;
  justify-content: space-between;
  flex: 1;
  font-size: 26rpx;
  align-items: center;
}
.stick{
  padding: 10rpx;
  box-sizing: border-box;
  background: #e7d0ae;
  text-align: center;
  color: white;
  font-size: 24rpx;
  border-radius: 10rpx;
}
.left_bottom{
  padding: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  text-align: left;
  color: #666
}
.list_right{
  flex: 2;
  text-align: center;
  font-size: 30rpx;
  color: #666
}