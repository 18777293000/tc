.goods{
  margin:20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #727272;
  border-radius:10rpx;
  padding:20rpx;
  position: relative;
}
.title{
  display:flex;
  justify-content:space-between;
}
.name{
  color:#727272;
  font-weight:30rpx;
}
.state{
  color:#e46969;
}
.middle{
   display:flex;
   justify-content:space-between;
}
.middle image{
  width:250rpx;
  height:200rpx;
  margin-right:10px;
  margin-top:10rpx;

}
.words,.color{
  display:block;
  text-align:left;
}
.color{
  color:#727272;
}
.middle text{
  text-align:left;
  line-height:40rpx;
}
.price{
  color:#da7c0c;
}
#price{
  display:flex;
  justify-content: flex-end;
  font:32rpx;
}
.total{
 margin-right:20rpx;
}
.totals{
  color:#727272;
  display:flex;
  justify-content: flex-end;
}
