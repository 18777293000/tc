/* pages/user/index.wxss */
.pages{
  padding: 20rpx;
  box-sizing: border-box;
  background: #f2f2f2
}
.list{
  padding: 10rpx;
  box-sizing: border-box;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  background: white;
  margin-bottom: 20rpx;
}
.list_top{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #d2d2d2;
  padding: 20rpx 0;
  box-sizing: border-box;
}
.classify{
  padding: 5rpx;
  box-sizing: border-box;
  text-align: center;
  color: white;
  border-radius: 15rpx
}
.list_bottom{
  padding: 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column
}
.centert{
  width: 100%;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #666
}
.time{
  color: #999;
  padding: 10rpx;
  box-sizing: border-box
}
.noneME{
font-size: 1.5rem;
margin-top: 400rpx;
margin-left: 250rpx;

}